<div class="listProduct">
    <form class="productForm">
        <strong class="product-listing-heading">List your Products</strong>
        <div class="input-box">
            <label for="images">Product Images (max- 4) *</label>
            <input id="images" type="file" name="images" accept="image/jpg, image/jpeg, image/png" required="true"
                multiple="multiple" />
        </div>
        <small class="productForm-info"> &#128712; maximum four images are allowed and each image size should
            not be
            greater than 80kb</small>
        <div id="image-preview">

        </div>
        <div class="input-box">
            <label for="productTitle">Product Title *</label>
            <input id="productTitle" placeholder="Enter Product Title" autocomplete="off" type="text" name="name"
                required="true">
        </div>
        <div class="input-box">
            <label for="productPrice">Product Price *</label>
            <input id="productPrice" placeholder="Enter Product Price" autocomplete="off" type="text" name="price"
                required="true">
        </div>
        <div class="input-box">
            <label for="myCategory">Choose Category *</label>
            <select name="category" id="myCategory" required="true">
                <option hidden value="">Category</option>
                <option value="stationary">Stationery</option>
                <option value="books">Books</option>
                <option value="uniform">Uniform</option>
                <option value="utensils">Utensils</option>
                <option value="sports">Sports</option>
                <option value="bag">Bag</option>
                <option value="footwear">Footwear</option>
            </select>
        </div>
        <div class="input-box">
            <label for="productDesc">Product Description *</label>
            <textarea name="desc" placeholder="Write Product Description" id="productDesc" cols="30" rows="10"
                required="true"></textarea>
        </div>
        <small class="productForm-info"> &#128712; minimum 100 characters and maximum 300 characters are allowed for
            product description</small>
        <button type="submit" class="list-product">LIST PRODUCT</button>
    </form>
</div>