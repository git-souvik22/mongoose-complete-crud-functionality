<script>
    const toggleProfile = document.getElementById("toggle-profile");
    document.addEventListener("DOMContentLoaded", () => {
        const navkey = localStorage.getItem("TCD");
        fetch(`${window.location.origin}/api/v2/profile`, {
            method: "GET",
            headers: {
                "Content-Type": "application/json",
                Authorization: `${navkey}`,
            },
        })
            .then(res => res.json())
            .then(user => {
                if (user.success === true) {
                    toggleProfile.innerHTML = `<a href="/profile" title="your profile">
                                    <i class="fas fa-user-circle fa-lg" style="color: #1a3666;"></i>
                                </a>`
                }
            })
    })
</script>