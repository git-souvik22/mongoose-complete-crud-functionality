                      <div
                        class="d-flex justify-content-between align-items-center"
                      >
                        <p class="product-title">
                          <a href="${url}"
                            >${Products.name}</a
                          >
                        </p>
                        <button type="button" data-number=${Products._id} class="wishlist-btn">
