    <script>
        const formDiv = document.querySelector(".userform");
        let modalOverlay = document.querySelector(".custom-modal-overlay");
        const OKbtn = document.getElementById("btnOk");
        const CANCELbtn = document.getElementById("btnCancel");
        const updateProfileBtn = document.querySelector(".update-profile");
        let allInput = document.querySelectorAll("input");
        let loaderDiv = document.querySelector(".loader-content");
        const loadMessage = document.getElementById("loadMessage");
        const loadingDiv = document.querySelector(".loading");


        allInput.forEach((input) => {
            input.addEventListener("change", (event) => {
                // console.log(event.target.value);
                updateProfileBtn.style = "display: block";
            });
        });


        updateProfileBtn.addEventListener("click", function () {
            modalOverlay.style = "display: block";
            OKbtn.innerText = "SUBMIT SELLER";
        });

        OKbtn.addEventListener("click", function (event) {
            proceed(event.target.innerText);
        });
        CANCELbtn.addEventListener("click", function (event) {
            proceed(event.target.innerText);
        });

        formDiv.addEventListener("submit", (event) => {
            event.preventDefault();
        });



        function proceed(value) {
            if (value === "SUBMIT SELLER") {
                const formData = new FormData(formDiv);
                const data = Object.fromEntries(formData);
                const { firmName, proprietor, businessCat, gst } = data;
                const bodyData = {
                    firmName: firmName.trim(),
                    proprietor: proprietor.trim(),
                    businessCat: businessCat.trim(),
                    gst: gst.trim(),
                }
                //console.log(bodyData)
                const tid = localStorage.getItem("TCD");
                if (firmName !== "" && proprietor !== "" && businessCat !== "") {
                    fetch(`${window.location.origin}/api/v2/register-seller`, {
                        method: "PUT",
                        headers: {
                            "Content-Type": "application/json",
                            Authorization: `${tid}`,
                        },
                        body: JSON.stringify(bodyData),
                    })
                        .then((res) => res.json())
                        .then((result) => {
                            console.log(result);
                            if (result.success === true) {
                                alert("Dear User your seller account will be activated once it is verified. Usually it takes less than 24hrs to verify you");
                                window.location.reload();
                            }
                            if (result.success === false) {
                                alert(result.message);
                            }
                        })
                        .catch((err) => {
                            console.log(err);
                        });
                }
            }
            else if (value === "CANCEL") {
                modalOverlay.style = "display: none";
            }
        }

        const productForm = document.querySelector("form.productForm");
        const imagePreview = document.getElementById('image-preview');
        const imageInput = document.getElementById("images")
        const productName = document.getElementById("productTitle");
        const productPrice = document.getElementById("productPrice");
        const productDesc = document.getElementById("productDesc")
        const productCategory = document.getElementById("myCategory");
        const productSubmitBtn = document.querySelector(".list-product");

        const FD = new FormData();
        //const images = []
        imageInput.addEventListener("change", function (event) {
            for (let i = 0; i < event.target.files.length; i++) {
                const file = event.target.files[i];
                //images.push(file)
                if (file && file.type.startsWith('image/')) {
                    if (file.size <= 80 * 1024) {
                        const reader = new FileReader();

                        reader.onload = function (event) {
                            const img = document.createElement('img');
                            img.src = event.target.result;
                            img.alt = 'Image Preview';
                            img.classList.add('preview-image');
                            if (imagePreview.children.length < 4) {
                                imagePreview.appendChild(img);
                                if (imagePreview.children.length === 4) {
                                    imageInput.setAttribute("disabled", "true")
                                }
                            }
                        };
                        reader.readAsDataURL(file);
                        FD.append(`images`, file);
                    } else {
                        alert(`${file.name} exceeds the size limit of 80KB`)
                    }
                }
                //console.log(images)
            }
        })
        productForm.addEventListener("submit", (event) => {
            event.preventDefault();
            loaderDiv.style = "display: flex;";
            loadMessage.innerText = "Creating Product...";
            loadMessage.style = "color: white;";
            FD.append("name", productName.value);
            FD.append("category", productCategory.value);
            FD.append("price", +productPrice.value);
            //console.log()
            if (productDesc.value.length >= 100 && productDesc.value.length <= 300) {
                FD.append("desc", productDesc.value);
                const prKey = localStorage.getItem("TCD");
                fetch(`${window.location.origin}/api/v1/create-product`, {
                    method: "POST",
                    headers: {
                        Authorization: `${prKey}`,
                    },
                    body: FD,
                }).then(res => res.json()).then(result => {
                    if (result.success === true) {
                        setTimeout(() => {
                            loadMessage.innerText = "Product Created Successfully!";
                            loadMessage.style = "color: white;";
                            loadingDiv.innerHTML = `<img
                        src="images/verified.gif" alt="verified animation" style="height: 80px; width: 80px"/>`;
                        }, 1000);
                        setTimeout(() => {
                            loaderDiv.style = "display: none;";
                            window.location.reload();
                        }, 2500);
                    }
                })
                    .catch(err => {
                        console.log(err);
                    })
            } else {
                alert("Product description should include 100 to 300 characters")
            }
        })
        productForm.addEventListener("change", () => {
            productSubmitBtn.style = "display: block"
        })


        const regSeller = document.querySelector(".register-seller");
        const listProduct = document.querySelector(".listProduct");
        const firmHeading = document.querySelector(".user-details")

        document.addEventListener("DOMContentLoaded", () => {
            const tcd = localStorage.getItem("TCD");
            // console.log(tcd);
            fetch(`${window.location.origin}/api/v2/profile`, {
                method: "GET",
                headers: {
                    "Content-Type": "application/json",
                    Authorization: `${tcd}`,
                },
            })
                .then((res) => res.json())
                .then((user) => {
                    //console.log(user.loggedUSER.isSeller);
                    if (user.success === true) {
                        firmHeading.innerHTML = `${user.loggedUSER.firmName}'s Dashboard`
                        if (user.loggedUSER.isSeller === 0) {
                            listProduct.style = "display: none";
                            regSeller.style = "display:block";
                        }
                        if (user.loggedUSER.isSeller === 1) {
                            listProduct.style = "display: block";
                            regSeller.style = "display: none";
                        }
                    } else {
                        listProduct.style = "display: none";
                        regSeller.style = "display: none";
                    }
                })
                .catch((err) => console.log(err));
        });


    </script>
